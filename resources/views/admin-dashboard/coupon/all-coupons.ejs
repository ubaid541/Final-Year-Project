<%- include('../../partials/admin/top-bar') %> <%-
include('../../partials/admin/sidebar') %>

<main class="mt-5 pt-3">
    <div class="container-fluid">
        <!-- page heading starts  -->
        <div class="page-heading">
            <div class="row">
                <% if(messages.error) { %>
                    <div class="row">
                    <div class="row col-4 text-center">
                    </div>
                    <div class="row col-6 text-center">
                        <div class='alert alert-danger' role='alert'><%= messages.error %></div>
                    </div>
                    <div class="row col-4 text-center">
                    </div>
                    </div>
                    <% } else if(messages.success){ %> 
                        <div class="row">
                            <div class="row col-4 text-center">
                            </div>
                            <div class="row col-6 text-center">
                                <div class='alert alert-success' role='alert'><%= messages.success %></div>
                            </div>
                            <div class="row col-4 text-center">
                            </div>
                            </div>
                    <% } %>  
            </div>
            <div class="row">
                <div class="d-sm-flex align-items-center justify-content-between mb-1 mt-5">
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="bi bi-filter"></i>Coupon
                    </h1>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="admin.php">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Coupons
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- page heading ends  -->
        <!-- Addons table starts here -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row" style="width: 100%">
                            <div class="col-8 mb-4 mb-lg-1">
                                <form class="d-flex ms-auto">
                                    <div class="input-group my-3 my-lg-0">
                                        <input type="text" id="searchCoupon" onkeyup="myFunction()" class="form-control" placeholder="Search Coupon" aria-label="Search Coupon" aria-describedby="button-addon2" />
                                        <button class="btn btn-primary" type="button" id="button-addon2">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-4 mb-3 mb-lg-0">
                                <div class="d-grid gap-2">
                                    <% if(user.role === 'seller'){  %>
                                        <a data-bs-toggle="modal" data-bs-target="#addCouponAttrs" class="btn btn-primary btn-block" type="button">
                                            <i class="bi bi-plus-circle-fill"></i>
                                            Add Coupon
                                        </a>
                                </div>
                            </div>
                            <!-- add coupon modal starts-->
                            <div class="modal fade" id="addCouponAttrs" tabindex="-1" aria-labelledby="addCouponLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="addCouponLabel">
                                                Add Coupon
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="card">
                                                <div class="card-body">
                                                    <form action="/add-coupon" method="post" id="cat_form">
                                                        <input type="hidden" name="seller_id" value="<%= user._id %>">
                                                        <div class="row">
                                                            <div class="col-sm-3 col-md-12">
                                                                <div class="mb-3">
                                                                    <div class="form-floating">
                                                                        <input name="coupon_name" class="form-control" type="text" placeholder="Coupon Name" required />
                                                                        <label for="floatingInput">Coupon Name</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-3 col-md-12">
                                                                <div class="mb-3">
                                                                    <div class="form-floating">
                                                                        <textarea name="coupon_desc" class="form-control" type="text" placeholder="Description" style="height: 80px" required></textarea>
                                                                        <label for="floatingInput">Description</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-3 col-md-12">
                                                                <div class="mb-3">
                                                                    <div class="form-floating">
                                                                        <input name="coupon_value" class="form-control" type="number" placeholder="Coupon value" required />
                                                                        <label for="floatingInput">Value</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-3 col-md-12">
                                                                <div class="mb-3">
                                                                    <div class="form-floating">
                                                                        <input name="coupon_expired" class="form-control" type="date" placeholder="Coupon expiry date" required />
                                                                        <label for="floatingInput">Expiry Date</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-3 col-md-12">
                                                                <div class="mb-3">
                                                                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="coupon_status">
                                                                        <option value="0">Active</option>
                                                                        <option value="1">Disable</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                                                Cancel
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                Save changes
                                            </button>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- add coupon modal ends-->
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                            <div class="table-responsive" id="couponTable">
                                <table class="table data-table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope='col'>#</th>
                                            <th scope='col'>Name</th>
                                            <th scope='col'>Description</th>
                                            <th scope='col'>Value</th>
                                            <th scope='col'>Date Added</th>
                                            <th scope='col'>Expiry Date</th>
                                            <th scope='col'>Status</th>
                                            <th scope='col'>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(coupon.length){ var i = 1 %> <% coupon.forEach((coupon)=>{ %>
                                            <tr>
                                                <th scope="row"><%= i++ %></th>
                                                <td>
                                                    <%= coupon.coupon_name %>
                                                </td>
                                                <td>
                                                    <%= coupon.coupon_desc %>
                                                </td>
                                                <td><%= coupon.coupon_value %></td>
                                                <td><%= moment(coupon.createdAt).format('YYYY-MM-DD') %></td>
                                                <td><%= moment(coupon.coupon_expired).format('YYYY-MM-DD') %></td>
                                                <td><%
                                                    if (coupon.coupon_status == 0) { %>
                                                        <p class='text-success'>Active </p>
                                                   <% } else { %>
                                                        <p class='text-danger'>Deactivated</p>
                                                    <% } %>
                                                </td>
                                                <td>

                                                    <div class="dropdown">
                                                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <i class="bi bi-gear-fill"></i>
                                                        </button>
                                                        <ul class="dropdown-menu shadow-lg rounded mt-1" aria-labelledby="dropdownMenuButton1">
                                                            <% if(user.role === 'seller') { %>
                                                                 <li>
                                                                     <a class="dropdown-item btn" href='/edit-coupon/<%= coupon._id %>'>Edit</a>
                                                                 </li>
                                                           <% } %>
                                                             <li>
                                                                 <a class="dropdown-item" href='/delete-coupon/<%= coupon._id %>'>Delete</a>
                                                             </li>
                                                         </ul>
                                                    </div>

                                                </td>
                                                </tr>
                                                <% }) %> <% } else { %>
                                                    <tr>
                                                      <td colspan="6" class="h1 text-center">No coupons found</td>
                                                    </tr>
                                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Coupon table ends here -->
    </div>
</main>

<script>
    // search inside coupon table
    function myFunction() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchCoupon");
        filter = input.value.toUpperCase();
        table = document.getElementById("couponTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>