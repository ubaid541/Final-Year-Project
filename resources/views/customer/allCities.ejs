<%- include('../partials/customer/top-bar') %>

<section id="category" class="category my-5">
  <div class="container">
    <div class="row">
      <div class="heading mt-5 mb-4">
        <h1 class="text-center">Cities</h1>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <% if(cities.length){ cities.forEach((cities)=>{ %>
      <div class="card card-style mx-3 my-3" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title mb-3"><%= cities.city_name %></h5>
          <a
            href="/single-city/<%= cities._id %>"
            class="btn btn-outline-primary"
            >Explore</a
          >
        </div>
      </div>
      <% }) } else{ %>
      <h1>No cities found.</h1>
      <% } %>
    </div>
  </div>
</section>
