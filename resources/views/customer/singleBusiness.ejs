<!--Navigation Bar-->
<section id="#navigation" class="navigation my-5">
    <div class="container">
        <div class="row">
            <ul class="nav nav-tabs ">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#category">Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#featured-products">Featured</a>
                </li>
            </ul>
        </div>
    </div>
</section>
<!--Categories etc-->
<section id="category" class="category my-5">
    <div class="container">
        <div class="row">
            <div class="heading">
                <h1 class="text-center mb-4">Category</h1>
            </div>
        </div>
                    <div class="row">
                        <% if(category.length){ category.forEach((category)=>{ %>
                    <div class="card card-style mx-3 my-3" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title"><%= category.cat_name %></h5>
                            <a href="/single-category/<%= category._id %>" class="btn btn-outline-primary">Explore</a>

                        </div>
                    </div>
                    <% })
                 } else { %>
                    <h2 class="text-center">No categories</h2>
                    <% } %>
                    </div>
    </div>
    <!-- <div class="mx-auto">
        <a href="" class="btn btn-primary">All Categories</a>
    </div> -->
</section>
<!--Products-->
<section id="featured-products" class="featured-products">
    <div class="container">
        <div class="row">
            <div class="heading mb-4">
                <h1 class="text-center">Products</h1>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <%  if(product.length){ product.forEach((product)=>{ %>
        <div class="col-sm-4 mb-4 d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <img src="/images/<%= product.pro_image %>" class="card-img-top" alt="product-image">
                <div class="card-body">
                    <h5 class="card-title"><%= product.pro_name %></h5>
                    <h5 class="card-title"><%= product.pro_price %>/Rs</h5>
                    <p class="card-text"><%= product.pro_desc %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <% if(product.pro_addon){ %>
                            <p><%= product.pro_addon.addon_name %></p>
                            <h6 class="fw-bold"><%= product.pro_addon.addon_price %>/Rs</h6>
                            <% } else{ %>
                                <p>No addons</p>
                                <% } %>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <% if(product.pro_attr){ %>
                            <p><%= product.pro_attr.attr_name %></p>
                            <h6 class="fw-bold"><%= product.pro_attr.attr_price %>/Rs</h6>
                            <% } else{ %>
                                <p>No Attributes</p>
                                <% } %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/single-product/<%= product._id %>" class="card-link"><%= product.pro_name %></a>
                </div>
            </div>
        </div>
        <%
    })
}else{ %>
    <h1>No products found</h1>
<%  }
%>
        </div>
    </div>
    </div>
</section>